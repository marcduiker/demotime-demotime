{
  "$schema": "https://demotime.show/demo-time.schema.json",
  "title": "5 - Terminal examples",
  "description": "",
  "version": 2,
  "demos": [
    {
      "title": "Terminal",
      "steps": [
        {
          "action": "openSlide",
          "path": ".demo/slides/examples/terminal.md"
        }
      ],
      "icons": {
        "start": "vm",
        "end": ""
      }
    },
    {
      "title": "Show terminal",
      "steps": [
        {
          "action": "executeVSCodeCommand",
          "command": "workbench.action.terminal.focus"
        },
        {
          "action": "executeTerminalCommand",
          "command": "clear",
          "terminalId": "node-demo"
        }
      ],
      "icons": {
        "start": "terminal",
        "end": ""
      }
    },
    {
      "title": "Open folder and list files",
      "steps": [
        {
          "action": "executeTerminalCommand",
          "command": "cd src",
          "autoExecute": true,
          "insertTypingMode": "character-by-character",
          "insertTypingSpeed": 100,
          "terminalId": "node-demo"
        },
        {
          "action": "executeTerminalCommand",
          "command": "ls",
          "autoExecute": true,
          "insertTypingMode": "character-by-character",
          "insertTypingSpeed": 100,
          "terminalId": "node-demo"
        },
        {
          "action": "open",
          "path": "src/index.js"
        }
      ],
      "icons": {
        "start": "terminal",
        "end": ""
      }
    },
    {
      "title": "Run Node app",
      "steps": [
        {
          "action": "executeTerminalCommand",
          "command": "npm run start",
          "terminalId": "node-demo",
          "insertTypingMode": "character-by-character",
          "insertTypingSpeed": 100
        }
      ],
      "icons": {
        "start": "terminal",
        "end": ""
      }
    },
    {
      "title": "Clear",
      "steps": [
        {
          "action": "executeTerminalCommand",
          "command": "cd ..",
          "terminalId": "node-demo",
          "insertTypingSpeed": 100
        },
        {
          "action": "executeTerminalCommand",
          "command": "clear",
          "insertTypingSpeed": 100,
          "terminalId": "node-demo"
        }
      ]
    },
    {
      "title": "Close terminal",
      "steps": [
        {
          "action": "closeTerminal",
          "terminalId": "node-demo"
        }
      ],
      "icons": {
        "start": "terminal",
        "end": ""
      }
    }
  ]
}