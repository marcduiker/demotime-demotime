{
  "$schema": "https://demotime.show/demo-time.schema.json",
  "title": "3 - Code examples",
  "description": "",
  "version": 2,
  "demos": [
    {
      "title": "Showing Code",
      "steps": [
        {
          "action": "openSlide",
          "path": ".demo/slides/examples/code.md"
        }
      ],
      "icons": {
        "start": "vm",
        "end": ""
      }
    },
    {
      "title": "Highlighting code 1",
      "steps": [
        {
          "action": "highlight",
          "path": "src/index.js",
          "position": "4",
          "highlightWholeLine": true
        }
      ],
      "icons": {
        "start": "code",
        "end": ""
      }
    },
    {
      "title": "Highlighting code 2",
      "steps": [
        {
          "action": "highlight",
          "path": "src/index.js",
          "position": "9,13:9,35",
          "highlightWholeLine": false
        }
      ],
      "icons": {
        "start": "code",
        "end": ""
      }
    },
    {
      "title": "Insert code",
      "steps": [
        {
          "action": "insert",
          "path": "src/index.js",
          "content": "console.log(\"Another log line\");",
          "position": "10",
          "highlightWholeLine": true,
          "insertTypingSpeed": 50,
          "insertTypingMode": "character-by-character"
        }
      ],
      "icons": {
        "start": "code",
        "end": ""
      }
    },
    {
      "title": "Using live input",
      "steps": [
        {
          "action": "write",
          "path": "src/index.js",
          "content": "console.log(\"Hello {DT_INPUT}\");",
          "startPlaceholder": "//<!-- START -->",
          "endPlaceholder": "//<!-- END -->",
          "position": "3",
          "highlightWholeLine": true
        }
      ],
      "icons": {
        "start": "pencil",
        "end": ""
      }
    },
    {
      "title": "Remove code",
      "steps": [
        {
          "action": "delete",
          "path": "src/index.js",
          "content": "",
          "highlightWholeLine": true,
          "insertTypingSpeed": 50,
          "insertTypingMode": "character-by-character",
          "position": "3"
        },
        {
          "action": "delete",
          "path": "src/index.js",
          "content": "",
          "highlightWholeLine": true,
          "insertTypingSpeed": 50,
          "insertTypingMode": "character-by-character",
          "position": "10"
        }
      ],
      "icons": {
        "start": "code",
        "end": ""
      }
    },
    {
      "title": "Replace",
      "steps": [
        {
          "action": "replace",
          "path": "src/index.js",
          "content": "console.log(\"Counter:\", i);\n  await sleep(500);",
          "startPlaceholder": "//<!-- START -->",
          "endPlaceholder": "//<!-- END -->"
        }
      ],
      "icons": {
        "start": "code",
        "end": ""
      }
    }
  ]
}