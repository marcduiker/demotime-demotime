  "title": "6 - Slide Examples",
  "description": "",
  "version": 2,
  "demos": [
    {
      "title": "Slides",
      "steps": [
        {
          "action": "setPresentationView"
        },
        {
          "action": "executeVSCodeCommand",
          "command": "workbench.action.toggleStatusbarVisibility"
        },
        {
          "action": "replace",
          "path": "src/index.js",
          "content": "  //<!-- START -->\n  //<!-- END -->",
          "position": "5:6",
          "highlightWholeLine": true
        },
        {
          "action": "openSlide",
          "path": ".demo/slides/examples/slides.md"
        }
      ],
      "icons": {
        "start": "vm",
        "end": ""
      }
    },
